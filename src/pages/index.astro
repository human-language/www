---
import BaseLayout from "@layouts/BaseLayout.astro";
import Header from "@components/UI/Header.astro";
import Icon from "@components/UI/Icons.astro";
---

<BaseLayout title="Welcome">
  <Header />

  <main class="min-h-[800px] flex items-center justify-center">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32 text-center">
      <p class="text-8xl font-bold mb-4 text-gray-900 dark:text-gray-100">
        Human
      </p>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
        Simple, Beautiful, Readable code for prompting.
      </p>

      <div class="flex gap-4 justify-center">
        <a
          href="/docs/introduction"
          class="btn btn-primary inline-flex items-center gap-2"
        >
          Get Started
          <Icon name="ChevronRight" size={18} />
        </a>
        <a
          href="https://github.com/human-language"
          class="btn btn-secondary inline-flex items-center gap-2"
        >
          <Icon name="Github" size={18} />
          GitHub
        </a>
      </div>
    </div>
  </main>
</BaseLayout>
