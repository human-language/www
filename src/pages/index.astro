---
import BaseLayout from "@layouts/BaseLayout.astro";
import Header from "@components/Header.astro";
import { ChevronRight, Github } from "@lucide/astro";
---

<BaseLayout title="Welcome">
  <Header />

  <main class="min-h-[800px] flex items-center justify-center">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32 text-center">
      <h1 class="text-8xl font-bold mb-4 font-garamond italic">Human</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
        The last syntax you'll ever write.
      </p>

      <div class="flex gap-4 justify-center">
        <a href="/docs" class="btn btn-primary inline-flex items-center gap-2">
          Get Started
          <ChevronRight size={18} />
        </a>
        <a
          href="https://github.com"
          class="btn btn-secondary inline-flex items-center gap-2"
        >
          <Github size={18} />
          GitHub
        </a>
      </div>
    </div>
  </main>
</BaseLayout>
