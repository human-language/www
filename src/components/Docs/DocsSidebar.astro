---
import { parseDocsStructure, sortSections } from "@utils/docsNavigation";

export interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props;

const docModules = import.meta.glob("../../pages/docs/**/*.{md,mdx}", {
  eager: true,
});

const sections = parseDocsStructure(docModules);
const sortedSections = sortSections(sections);

const normalizedPath = currentPath.replace(/\/$/, "");
---

<nav class="docs-sidebar">
  {
    sortedSections.map(([sectionName, items]) => (
      <div class="mb-6">
        <h3 class="mb-2 text-sm font-bold text-gray-900 dark:text-gray-100">
          {sectionName}
        </h3>
        <ul class="space-y-1">
          {items.map((item) => {
            const normalizedItemUrl = item.url.replace(/\/$/, "");
            const isActive = normalizedPath === normalizedItemUrl;
            return (
              <li>
                <a
                  href={item.url}
                  class={`block rounded-md px-2 py-1.5 text-sm transition-all ${
                    isActive
                      ? "bg-blue-50 text-blue-700 font-medium dark:bg-blue-950/30 dark:text-blue-400"
                      : "text-gray-600 hover:text-gray-900 hover:bg-gray-50 dark:text-gray-400 dark:hover:text-gray-100 dark:hover:bg-gray-800/50"
                  }`}
                >
                  {item.title}
                </a>
              </li>
            );
          })}
        </ul>
      </div>
    ))
  }

  {
    sortedSections.length === 0 && (
      <div class="rounded-md border border-dashed border-gray-300 p-4 text-sm text-gray-500 dark:border-gray-700 dark:text-gray-400">
        No documentation files found.
      </div>
    )
  }
</nav>
