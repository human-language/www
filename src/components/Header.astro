---
import { BookText } from "@lucide/astro";

export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<header class={`w-full pt-2.5 ${className || ""}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <nav class="grid grid-cols-3 items-center h-16">
      <!-- Logo (left) -->
      <div class="flex justify-start">
        <a href="/" class="flex items-center">
          <span class="text-2xl font-bold font-garamond italic">Human</span>
        </a>
      </div>

      <!-- Center navigation -->
      <div class="flex items-center justify-center gap-6">
        <a
          href="/about"
          class="text-gray-600 hover:text-gray-900 transition-colors"
        >
          About
        </a>
        <a
          href="/community"
          class="text-gray-600 hover:text-gray-900 transition-colors"
        >
          Community
        </a>
      </div>

      <!-- Docs button (right) -->
      <div class="flex justify-end">
        <a href="/docs" class="btn btn-primary inline-flex items-center gap-2">
          <BookText size={18} />
          Documentation
        </a>
      </div>
    </nav>
  </div>
</header>
